      <script type='text/javascript' 
      class='clef-code' 
      src='https://clef.io/v1/clef.js' 
      data-app-id='6f8fb6e642924a5e9e7deacf35292abf' 
      data-redirect-url='http://localhost:9292/login'></script>
    <% end %>
  </body>
</html>